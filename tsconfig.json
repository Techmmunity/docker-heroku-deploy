{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./tsc",
    "rootDir": "./src",
    "lib": ["es6"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
